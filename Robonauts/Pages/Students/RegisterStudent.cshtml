<div class="container">
    <div class="panel" style="background-color:#FFFFFF;" id="top">
        <div class="panel-heading">
            <h1 class="text-capitalize text-center" style="color:darkorange" ;>Subscribe</h1>
            <p class="section-subheading text-center">Subscribe to get notifications about our coming events</p>
        </div>
    </div>
    <div class="text-center">
        <p class="text-info text-center">@Model.Message</p>
    </div>

    <form method="post">
        <div>
            <div class="row">
                <div class="col-md-2"></div>
                <div class="form-group col-md-4">
                    <label for="firstname">First Name:</label>
                    <div>
                        <input class="form-control" asp-for="Student.FirstName" />
                        <span asp-validation-for="Student.FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="lastname">Last Name:</label>
                    <div>
                        <input class="form-control" asp-for="Student.LastName" />
                        <span asp-validation-for="Student.LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2"></div>
            </div>
            <div class="row">
                <div class="col-md-2"></div>
                <div class="form-group col-md-4">
                    <label for="course">Course:</label>
                    <div>
                        <select asp-for="Student.Course" class="form-control">
                            <option value="B.Com">B.Com</option>
                            <option value="B.Com (H)">B.Com (H)</option>
                            <option value="B.A Programme">B.A Programme</option>
                            <option value="B.A.(H) English">B.A.(H) English</option>
                            <option value="B.A.(H) Hindi">B.A.(H) Hindi</option>
                            <option value="B.A.(H) Political Science">B.A.(H) Political Science</option>
                            <option value="B.A.(H) Philosophy">B.A.(H) Philosophy</option>
                            <option value="B.A.(H) Applied Psychology">B.A.(H) Applied Psychology</option>
                            <option value="B.Sc.(H) Mathematics">B.Sc.(H) Mathematics</option>
                            <option value="B.Sc.(H) Statistics">B.Sc.(H) Statistics</option>
                            <option value="B.Sc.(H) Computer Science">B.Sc.(H) Computer Science</option>
                            <option value="B.Tech Computer Science">B.Tech Computer Science</option>
                            <option value="B.Voc">B.Voc</option>
                            <option value="Not Applicable">Not Applicable</option>
                        </select>
                        <span asp-validation-for="Student.Course" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="year">Year:</label>
                    <div>
                        <select asp-for="Student.Year" class="form-control">
                            <option value="First">First Year</option>
                            <option value="Second">Second Year</option>
                            <option value="Third">Third Year</option>
                            <option value="Fourth">Fourth Year</option>
                            <option value="Not Applicable">Not Applicable</option>
                        </select>
                        <span asp-validation-for="Student.Year" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2"></div>
            </div>
            <div class="row">
                <div class="col-md-2"></div>
                <div class="form-group col-md-4">
                    <label for="phoneNumber">Phone Number:</label>
                    <div>
                        <input class="form-control" asp-for="Student.PhoneNumber" />
                        <span asp-validation-for="Student.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="email">Email ID:</label>
                    <div>
                        <input class="form-control" asp-for="Student.Email" id="ajaxEmail" />
                        <span asp-validation-for="Student.Email" class="text-danger"></span>
                        <span class="text-danger" id="emailSpan">@Model.EmailErrorMessage</span>
                    </div>
                </div>

                <div class="col-md-2"></div>
            </div>
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4 text-center">
                    <input value="Submit" class="btn btn-success" type="submit" id="submitButton"/>
                </div>
                <div class="col-md-4"></div>
            </div>

        </div>
    </form>
</div>

